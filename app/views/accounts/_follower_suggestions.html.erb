<% @follower_suggestions.each do |account| %>
  <div class="follower-suggestions">
    <%= link_to profile_picture(account), profile_path(account.username), class: "img-circle" %>
    <%= link_to account.username, profile_path(account.username), class: "text-dark"  %>
    <p><%= account.created_at > 2.days.ago ? "New to Instagram" : "Followed by X users" %></p>
  </div>
<% end %>